// prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum DiscountType {
  NONE
  PERCENT
}

model Merchant {
  id String @id @default(uuid())

  // Link to Supabase auth user (nullable but unique)
  userId String? @unique

  name        String
  description String?
  avatarUrl   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    String?
  address     String?
  city        String?
  phone       String?
  website     String?
  lat         Float?
  lng         Float?

  deals Deal[]
}

model Deal {
  id          String  @id @default(uuid())
  title       String
  description String? // ✅ make optional (safer)

  originalPrice Int?

  // NEW FIELD (your existing field)
  shortCode String? @unique

  discountValue Int          @default(0)
  discountType  DiscountType @default(NONE)

  imageUrl String?

  // ✅ This is what merchant sets (null = unlimited)
  maxRedemptions Int?

  startsAt DateTime
  endsAt   DateTime

  merchantId String
  merchant   Merchant @relation(fields: [merchantId], references: [id])

  redemptions Redemption[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Redemption {
  id     String @id @default(uuid())
  dealId String
  deal   Deal   @relation(fields: [dealId], references: [id])

  /// full raw QR payload (or code)
  code String @unique

  /// short human-friendly code for scanning / lookup
  shortCode String @unique

  // ✅ IMPORTANT: this must be nullable.
  // Not redeemed yet => NULL
  // Redeemed => timestamp set by confirm endpoint
  redeemedAt DateTime?

  // ✅ Helpful for “created QR codes” list + debug
  createdAt DateTime @default(now())
}
